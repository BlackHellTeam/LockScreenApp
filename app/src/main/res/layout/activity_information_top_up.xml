<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_information_top_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.askhmer.lockscreen.activity.InformationTopUp"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CellCard"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <!--dec-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--card show-->
            <LinearLayout
                android:background="@color/red_light"
                android:id="@+id/layout_card"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="130dp"
                    android:layout_height="80dp"
                    android:src="@drawable/bee_phone_new"/>

                <TextView
                    android:paddingRight="25dp"
                    android:gravity="right|center_vertical"
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textSize="26dp"
                    android:text="1 $"/>

            </LinearLayout>

            <!--detail-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingLeft="15dp"
                android:paddingBottom="15dp"
                android:orientation="vertical">

                <!--information-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--reciever-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginBottom="10dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/reciever"
                            android:textSize="16dp"
                            android:gravity="center_vertical"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|center_vertical"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/txt_reciever"
                                android:layout_width="100dp"
                                android:layout_height="35dp"
                                android:textSize="16dp"
                                android:gravity="center"
                                android:text="40,0000"/>


                        </LinearLayout>

                    </LinearLayout>

                    <!--purchase_amount-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginBottom="10dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/used"
                            android:textSize="16dp"
                            android:gravity="center_vertical"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|center_vertical"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/txt_used_point"
                                android:layout_width="100dp"
                                android:layout_height="35dp"
                                android:background="#EEEEEE"
                                android:textSize="16dp"
                                android:gravity="center"
                                android:textColor="@color/Color_DarkRed"
                                android:text="40,0000"/>

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="8dp"
                                android:src="@drawable/ic_point_gray"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!--mypoint-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginBottom="10dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/mypoint"
                            android:textSize="16dp"
                            android:gravity="center_vertical"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|center_vertical"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/txt_mypoint"
                                android:layout_width="100dp"
                                android:layout_height="35dp"
                                android:background="#EEEEEE"
                                android:textSize="16dp"
                                android:gravity="center"
                                android:text="40,0000"/>

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="8dp"
                                android:src="@drawable/ic_point_gray"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!--Purchase-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginBottom="10dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/p_after_pur"
                            android:textSize="16dp"
                            android:gravity="center_vertical"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|center_vertical"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/txt_total"
                                android:layout_width="100dp"
                                android:layout_height="35dp"
                                android:background="#EEEEEE"
                                android:textSize="16dp"
                                android:gravity="center"
                                android:text="40,0000"/>

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="8dp"
                                android:src="@drawable/ic_point_gray"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!--button-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp">

                        <Button
                            android:id="@+id/btn_purchase"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:text="@string/purchase"
                            android:textColor="@color/white"
                            android:background="@drawable/btn_selector"/>

                    </LinearLayout>

                </LinearLayout>

                <!--description-->
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--description-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:layout_marginBottom="6dp"
                        android:textSize="16dp"/>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/darker_gray"
                        android:text="@string/str1" />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/darker_gray"
                        android:text="@string/str2" />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/darker_gray"
                        android:text="@string/str3" />

                    <!--processing-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Processing"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:textSize="16dp"/>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/darker_gray"
                        android:text="@string/str4" />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/darker_gray"
                        android:text="@string/str5" />

                    <!--purchase-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Processing"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:textSize="16dp"/>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/darker_gray"
                        android:text="@string/str6" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
