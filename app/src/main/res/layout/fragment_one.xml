<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:isScrollContainer="true"
            android:weightSum="7">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/border_shadow"
                android:gravity="center"
                android:layout_weight="4">
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="145dp"
                    android:src="@drawable/pig"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/txt_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="USER NAME"
                    android:textSize="22dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="#8fbadf"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_weight="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" YOUR BALANCE"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:layout_marginTop="20dp"
                            android:textColor="#a6a6a6"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="95dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.7"
                                android:gravity="center|right">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/point_icon"
                                    android:scaleType="fitCenter"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_mypoint"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text=""
                                android:gravity="center"
                                android:textSize="50dp"
                                android:textColor="@color/black"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.7"
                                android:gravity="center|left">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/right"
                                    android:scaleType="fitCenter"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/btn_tap_off"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <LinearLayout
                            android:id="@+id/medayi_news"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:clickable="true"
                            android:background="@drawable/bg_selector">
                            <ImageView
                                android:layout_width="43dp"
                                android:layout_height="43dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/news"
                                android:layout_marginTop="15dp"/>
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="MEDAYI NEWS"
                                android:gravity="center"
                                android:textSize="14dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"/>
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/btn_tap_off"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"/>

                        <LinearLayout
                            android:id="@+id/medayi_sharing"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:clickable="true"
                            android:background="@drawable/bg_selector">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/sharing"
                                android:layout_marginTop="15dp"/>
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="MEDAYI Sharing"
                                android:gravity="center"
                                android:textSize="14dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"/>
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
<!--            <View
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"/>-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>
