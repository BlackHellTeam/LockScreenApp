<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.askhmer.lockscreen.activity.PhoneNumber"
    android:orientation="vertical"
    android:background="@drawable/have_back">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_no"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/back_color"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:orientation="horizontal"
                android:background="@drawable/border_shadow"
                android:gravity="center">
                <ImageView
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_icon_e"
                    android:scaleType="fitEnd"
                    android:padding="10dp"/>
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/phone"
                    android:scaleType="fitStart"
                    android:padding="15dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">

                    <!--Phone number-->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_no"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="9dp"/>

                    <LinearLayout
                        android:background="@drawable/radius_ed"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:id="@+id/sp_location"
                            android:touchscreenBlocksFocus="true"
                            android:spinnerMode="dialog"
                            android:textAlignment="center" />

                    </LinearLayout>

                    <View
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/btn_tap_off"/>

                    <LinearLayout
                        android:background="@drawable/radius_ed"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_code"
                            android:layout_weight="3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="14dp"
                            android:text="+855"/>

                        <EditText
                            android:layout_weight="1"
                            android:id="@+id/et_phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|center"
                            android:inputType="phone"
                            android:hint="@string/input_your_number"
                            android:maxLines="1"
                            android:singleLine="true" />

                    </LinearLayout>
                    <View
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@color/btn_tap_off"/>

                    <TextView
                        android:id="@+id/ve_phone_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/validatePhone"
                        android:visibility="gone"
                        android:gravity="center_horizontal"
                        android:textColor="@android:color/holo_red_dark" />
                    <Button
                        android:id="@+id/bttn_next"
                        android:layout_width="170dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/apply"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_selector"/>
                    <TextView
                        android:layout_marginTop="4dp"
                        android:id="@+id/tv_wait_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:gravity="center_horizontal"
                        android:textColor="@android:color/holo_red_dark" />
                    <LinearLayout
                        android:id="@+id/layout_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="45dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:background="@drawable/radius_ed">

                        <EditText
                            android:layout_weight="1"
                            android:id="@+id/et_confirm"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="10dp"
                            android:inputType="number"
                            android:gravity="center_vertical" />

                        <Button
                            android:layout_weight="1"
                            android:id="@+id/btn_confirm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/confirmNumber"
                            android:textColor="@color/white"
                            android:background="@drawable/btn_selector"
                            android:layout_alignParentEnd="true"/>
                    </LinearLayout>

                    <!--<TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="@string/welcome"
                        android:textColor="@color/colorAccent"/>-->

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
