<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape
            android:shape="oval"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">

            <gradient
                android:startColor="#fff71c"
                android:endColor="#cfc91a"
                android:angle="270"/>

            <size
                android:width="50dp"
                android:height="50dp" />

            <stroke
                android:width="0.01dp"
                android:color="#eaff00"/>
        </shape>
    </item>
    <item android:state_checked="false">

        <shape
            android:shape="oval"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">

            <gradient
                android:startColor="#cdcdcf"
                android:endColor="#a2a4a7"
                android:angle="270"/>

            <size
                android:width="54dp"
                android:height="54dp" />

            <stroke
                android:width="0.01dp"
                android:color="#97999c"/>

        </shape>
    </item>
</selector>